package com.tephoneos.tehome;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.widget.Toast;
import com.tephoneos.teide.TPKAutoService;

public class TeHomeTest extends Activity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);

        // Örnek: Android Studio projesi aç ve TPK servisini çalıştır
        testProject("/storage/emulated/0/TeProjects/MyApp.apk", "ANDROID_STUDIO");

        // Örnek: Te Code Studio Script aç ve TPK servisini çalıştır
        testProject("/storage/emulated/0/TeProjects/MyScript.tsc", "TE_CODE_STUDIO");
    }

    private void testProject(String projectFile, String ide) {
        try {
            // IDE açılıyor
            Intent ideIntent;
            if(ide.equals("ANDROID_STUDIO")) {
                ideIntent = getPackageManager().getLaunchIntentForPackage("com.android.studio");
            } else {
                ideIntent = getPackageManager().getLaunchIntentForPackage("com.tephoneos.tecodestudio");
            }

            if(ideIntent != null) startActivity(ideIntent);

            // TPK otomatik servisi başlatılıyor
            Intent serviceIntent = new Intent(this, TPKAutoService.class);
            serviceIntent.putExtra("PROJECT_FILE", projectFile);
            startService(serviceIntent);

            Toast.makeText(this, ide + " açıldı ve TPK servisi aktif!", Toast.LENGTH_SHORT).show();

        } catch (Exception e) { e.printStackTrace(); }
    }
}
package com.tephoneos.tehome;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.widget.Toast;
import com.tephoneos.teide.TPKAutoService;

public class TeHomeLiveTest extends Activity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);

        // Canlı test için iki proje çalıştırılıyor
        runLiveTest("/storage/emulated/0/TeProjects/MyApp.apk", "ANDROID_STUDIO");
        runLiveTest("/storage/emulated/0/TeProjects/MyScript.tsc", "TE_CODE_STUDIO");
    }

    private void runLiveTest(String projectFile, String ide) {
        try {
            // IDE açılıyor
            Intent ideIntent;
            if(ide.equals("ANDROID_STUDIO")) {
                ideIntent = getPackageManager().getLaunchIntentForPackage("com.android.studio");
            } else {
                ideIntent = getPackageManager().getLaunchIntentForPackage("com.tephoneos.tecodestudio");
            }

            if(ideIntent != null) startActivity(ideIntent);

            // TPK otomatik servisi başlatılıyor
            Intent serviceIntent = new Intent(this, TPKAutoService.class);
            serviceIntent.putExtra("PROJECT_FILE", projectFile);
            startService(serviceIntent);

            // Kullanıcıya canlı bildirim
            Toast.makeText(this, ide + " açıldı ve TPK servisi aktif!", Toast.LENGTH_SHORT).show();

        } catch (Exception e) { e.printStackTrace(); }
    }
}
package com.tephoneos.tehome;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.widget.Toast;
import com.tephoneos.teide.TPKAutoService;

public class TeOSMainController extends Activity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);

        // TeHome UI başlat
        launchTeHome();

        // Örnek: Android Studio ve Te Code Studio projeleri
        runProject("/storage/emulated/0/TeProjects/MyApp.apk", "ANDROID_STUDIO");
        runProject("/storage/emulated/0/TeProjects/MyScript.tsc", "TE_CODE_STUDIO");
    }

    // TeHome UI başlatma
    private void launchTeHome() {
        Intent teHomeIntent = new Intent(this, TeHome.class);
        startActivity(teHomeIntent);
        Toast.makeText(this, "TeHome UI başlatıldı!", Toast.LENGTH_SHORT).show();
    }

    // Proje çalıştırma ve TPK servisi
    private void runProject(String projectFile, String ide) {
        try {
            // IDE aç
            Intent ideIntent;
            if(ide.equals("ANDROID_STUDIO")) {
                ideIntent = getPackageManager().getLaunchIntentForPackage("com.android.studio");
            } else {
                ideIntent = getPackageManager().getLaunchIntentForPackage("com.tephoneos.tecodestudio");
            }

            if(ideIntent != null) startActivity(ideIntent);

            // TPK otomatik servisi başlat
            Intent serviceIntent = new Intent(this, TPKAutoService.class);
            serviceIntent.putExtra("PROJECT_FILE", projectFile);
            startService(serviceIntent);

            // Kullanıcıya bildirim
            Toast.makeText(this, ide + " açıldı ve TPK servisi çalışıyor!", Toast.LENGTH_SHORT).show();

        } catch (Exception e) { e.printStackTrace(); }
    }
}
package com.tephoneos.teapps;

import android.app.Activity;
import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.ArrayAdapter;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ListView;
import android.widget.Toast;

import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.ArrayList;

public class NotesApp extends Activity {

    private ListView notesListView;
    private ArrayList<String> notes = new ArrayList<>();
    private ArrayAdapter<String> adapter;
    private String notesDirectory = "/storage/emulated/0/TeNotes/"; // Notlar dizini

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);

        notesListView = new ListView(this);
        setContentView(notesListView);

        File dir = new File(notesDirectory);
        if(!dir.exists()) dir.mkdirs();

        loadNotes();

        notesListView.setOnItemClickListener(new AdapterView.OnItemClickListener() {
            @Override
            public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
                editNote(notes.get(position));
            }
        });

        notesListView.setOnItemLongClickListener(new AdapterView.OnItemLongClickListener() {
            @Override
            public boolean onItemLongClick(AdapterView<?> parent, View view, int position, long id) {
                deleteNote(notes.get(position));
                return true;
            }
        });
    }

    // Notları yükle
    private void loadNotes() {
        notes.clear();
        File dir = new File(notesDirectory);
        File[] files = dir.listFiles();
        if(files != null) {
            for(File file : files) {
                notes.add(file.getName());
            }
        }
        adapter = new ArrayAdapter<>(this, android.R.layout.simple_list_item_1, notes);
        notesListView.setAdapter(adapter);
    }

    // Yeni not oluştur
    private void createNote(String noteName, String content) {
        try {
            File file = new File(notesDirectory + noteName + ".txt");
            FileOutputStream fos = new FileOutputStream(file);
            fos.write(content.getBytes());
            fos.close();
            Toast.makeText(this, noteName + " oluşturuldu!", Toast.LENGTH_SHORT).show();
            loadNotes();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    // Notu düzenle
    private void editNote(String noteName) {
        // Burada EditText veya ayrı aktivite ile not içeriğini düzenleme açılabilir
        Toast.makeText(this, noteName + " düzenleme ekranı açıldı!", Toast.LENGTH_SHORT).show();
    }

    // Notu sil
    private void deleteNote(String noteName) {
        File file = new File(notesDirectory + noteName);
        if(file.exists()) {
            file.delete();
            Toast.makeText(this, noteName + " silindi!", Toast.LENGTH_SHORT).show();
            loadNotes();
        }
    }
}

